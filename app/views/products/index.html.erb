
<%= form_tag(root_path, :method => 'get' ) do %>
    <%= text_field_tag :search %>
    <%= submit_tag 'Search', :name => nil %>
<% end %>

<% @products.each do |product| %>
<div class="col-md-4">
<%= link_to image_tag("image1.jpeg", class:"img-rounded",size: '250x250' ), "/products/#{product.id}" %>
<br>
商品名：<%= product.name %><br>
サイズ：<%= product.size.size %>
</div>
<% end %>

<%= will_paginate %>