


<% @products.each do |product| %>
    <div class="col-md-4">
    <%= link_to image_tag("image1.jpeg", class:"img-rounded",size: '250x250' ), "/products/#{product.id}" %>
    <br>
    商品名：<%= product.name %><br>
    サイズ：<%= product.size.size %><br>
    カテゴリ：<%= product.category.category %><br>
    ブランド：<%= product.brand.brand %><br>
    </div>
    
    
    <% end %>
    
    <%= will_paginate @products %>